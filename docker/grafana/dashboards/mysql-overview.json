{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "grafana"
        },
        "enable": true,
        "hide": true,
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "panels": [
    {
      "type": "stat",
      "title": "MySQL Up",
      "targets": [
        {
          "expr": "max(up{job=\"mysqld-exporter\"})"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "last"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value"
      },
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Queries per second (QPS)",
      "targets": [
        {
          "expr": "rate(mysql_global_status_questions[1m])"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 4,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Threads Running",
      "targets": [
        {
          "expr": "mysql_global_status_threads_running"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Connections",
      "targets": [
        {
          "expr": "mysql_global_status_connections"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Slow Queries (rate)",
      "targets": [
        {
          "expr": "rate(mysql_global_status_slow_queries[5m])"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Host CPU (node-exporter)",
      "targets": [
        {
          "expr": "100 - (avg by(instance)(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      }
    },
    {
      "type": "timeseries",
      "title": "InnoDB Buffer Pool Hit Rate",
      "targets": [
        {
          "expr": "(1 - (rate(mysql_global_status_innodb_buffer_pool_reads[5m]) / rate(mysql_global_status_innodb_buffer_pool_read_requests[5m]))) * 100"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 39,
  "style": "dark",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "title": "MySQL Overview",
  "uid": "mysql-overview",
  "version": 1
}
